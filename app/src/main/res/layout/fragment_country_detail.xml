<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:padding="16dp"
    tools:context=".fragment_version.fragments.FragmentCountryDetail">


<ImageView
        android:id="@+id/country_detail_flag"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/country_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/country_detail_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/country_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/country_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capitale :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/country_capital_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_capital"
                app:layout_constraintStart_toEndOf="@id/country_capital"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/country_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/country_capital"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/country_population_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_population"
                app:layout_constraintStart_toEndOf="@id/country_population"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/country_president"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrÃ©sident :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/country_population"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/country_president_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_president"
                app:layout_constraintStart_toEndOf="@id/country_president"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/country_pib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIB :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/country_president"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/country_pib_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_pib"
                app:layout_constraintStart_toEndOf="@id/country_pib"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/country_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Langue :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/country_pib"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/country_language_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_language"
                app:layout_constraintStart_toEndOf="@id/country_language"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/country_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monnaie :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/country_language"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/country_currency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/country_currency"
                app:layout_constraintStart_toEndOf="@id/country_currency"
                android:layout_marginStart="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/country_currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:10"
        tools:ignore="NotSibling" />
</androidx.constraintlayout.widget.ConstraintLayout>
