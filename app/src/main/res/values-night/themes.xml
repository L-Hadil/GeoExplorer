<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Mode Nuit). -->
    <style name="Theme.GeoExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Bleu profond nuit) -->
        <item name="colorPrimary">@color/earth_blue</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/cloud_white</item>

        <!-- Secondary brand color (Vert forêt foncé) -->
        <item name="colorSecondary">@color/forest_green</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/cloud_white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background & surface colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/dark_brown</item>
        <item name="colorOnSurface">@color/cloud_white</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/earth_blue</item>
    </style>
</resources>
